{
  "name": "nodejs-design-patterns-book",
  "version": "3.0.0",
  "description": "Source for Website for Node.js Design Patterns, book by Mario Casciaro and Luciano Mammino, published by Packt (http://nodejsdp.link/buy)",
  "main": "index.js",
  "scripts": {
    "test": "eslint src",
    "build:sass": "sass --style=compressed src/scss/style.scss src/_includes/css/style.css",
    "build:eleventy": "eleventy --input=src --output=build",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:eleventy": "eleventy --input=src --output=build --serve",
    "dev": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass build:eleventy",
    "deploy": "gh-pages -d build --dotfiles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book.git"
  },
  "author": "Luciano Mammino, Mario Casciaro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book/issues"
  },
  "homepage": "https://github.com/nodejs-design-patterns-book/nodejs-design-patterns-book#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-img": "^0.3.0",
    "bulma": "^0.9.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.10"
  },
  "dependencies": {}
}
